# Baseline SCOTUS Model Configuration
# ==================================

# Model
BASELINE_DESCRIPTION_MODEL_NAME=Stern5497/sbert-legal-xlm-roberta-base
BASELINE_EMBEDDING_DIM=384
BASELINE_HIDDEN_DIM=512
BASELINE_DROPOUT_RATE=0.1

# Training
BASELINE_LEARNING_RATE=1e-4
BASELINE_WEIGHT_DECAY=1e-2
BASELINE_NUM_EPOCHS=10
BASELINE_BATCH_SIZE=16
BASELINE_NUM_WORKERS=0
BASELINE_PATIENCE=5

# Device
BASELINE_DEVICE=auto

# Data
BASELINE_DATASET_FILE=data/processed/case_dataset.json
BASELINE_DESCRIPTION_TOKENIZED_FILE=data/processed/encoded_descriptions.pkl

# Year filter for fixed 9-justice composition
BASELINE_YEAR_START=2010
BASELINE_YEAR_END=2016

# CVTT / Holdout
BASELINE_USE_TIME_BASED_CV=true
BASELINE_CV_FOLDS=3
BASELINE_CV_TRAIN_SIZE=800
BASELINE_CV_VAL_SIZE=100

# Optuna
BASELINE_OPTUNA_N_TRIALS=25
BASELINE_OPTUNA_STUDY_NAME=baseline_opt
BASELINE_OPTUNA_STORAGE=
BASELINE_OPTUNA_N_JOBS=1
BASELINE_OPTUNA_TIMEOUT=0


